{% extends 'base.html.twig' %}

{% block title %}Lista de Episodes da Temporada {{ season.number }} da serie {{ serie.name }}{% endblock %}

{% block body %}

    <a class="btn btn-dark mb-2" href="{{ path('app_seasons',{'seriesId': serie.id}) }}">Voltar</a>
    <form method="post">
        <ul class="list-group">
            {% for episode in episodes %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Episode {{ episode.number }}

                    <label>
                        <input
                                type="checkbox"
                                {{ episode.watched ? 'checked': '' }}
                                name="episodes[{{ episode.id }}]" />
                    </label>
                </li>
            {% endfor %}
        </ul>

        <button class="btn btn-primary mt-2">
            Salvar
        </button>
    </form>
{% endblock %}
