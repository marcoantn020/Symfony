{% extends 'base.html.twig' %}

{% block title %}Temporadas: {{ series.name }}{% endblock %}

{% block body %}

    <a class="btn btn-dark mb-2" href="{{ path('app_series') }}">Voltar</a>
    <ul class="list-group">
        {% for season in seasons %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="{{ path('app_episode', {'seasonId': season.id}) }}">
                    {{ season.number }}ยบ Temporada
                </a>
                <span class="badge bg-secondary">
                    {{ season.getEpisodesWatched|length }} /
                    {{ season.episodes|length }}
                </span>
            </li>
        {% endfor %}
    </ul>

{% endblock %}
